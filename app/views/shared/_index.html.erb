<% if @images.count > 0 %>
<div class="row container-fluid image-list">
  <% @images.each do |image| %>
    <div class="col-lg-4">
      <div class="js-image image-card">
        <div>
          <%= image_tag(image.url, :class => 'image-card__url') %>
        </div>
        <div class="btn btn-outline-primary image-card__button">
          <%= link_to 'View Details', image_path(image), :class => "btn" %>
        </div>
        <% image.tag_list.each do |tag| %>
          <% if tag != 'untagged' %>
            <div class="btn btn-success image-card__tags">
              <%= link_to tag, images_path(tag: tag), :class => 'card-text' %>
            </div>
          <% end %>
        <% end %>
      </div>
    </div>
  <% end %>
</div>
<% else %>
  <h1>No Images Found</h1>
<% end %>

