<p><%= image_tag(@image.url, :class => 'image-card__url') %></p>
<% @image.tag_list.each do |tag| %>
  <% if tag != 'untagged' %>
    <div class="btn btn-success image-card__tags">
      <p id="image-card" class="card-text"><%= tag %></p>
    </div>
  <% end %>
<% end %>
<span></span>
<br/>
<div class="btn btn-warning image-card__button">
  <%= link_to 'Edit', edit_image_path, class: 'js-edit-image-link' %>
</div>
<div class="btn btn-danger image-card__button">
  <%= link_to 'Delete', image_path(@image.id), :class => 'image-card__delete', :method => :delete,  :data => {confirm: 'Are you sure?'} %>
</div>
